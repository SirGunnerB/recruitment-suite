{
  "name": "recruitment-software",
  "version": "1.0.0",
  "description": "Feature-rich recruitment software with ATS, CRM, and Payroll management",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "cross-env NODE_ENV=development tsc -p tsconfig.electron.json && electron .",
    "build": "npm run build:vite && npm run build:electron",
    "build:vite": "tsc && vite build",
    "build:electron": "cross-env NODE_ENV=production tsc -p tsconfig.electron.json",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "docs": "typedoc",
    "i18n:extract": "i18next-scanner --config i18next-scanner.config.js",
    "prepare": "husky install"
  },
  "author": "SirGunnerB",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.35.1",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/debug": "^4.1.8",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.2",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "i18next-scanner": "^4.2.0",
    "jest": "^29.6.1",
    "jest-environment-jsdom": "^29.6.1",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.1",
    "typedoc": "^0.27.6",
    "typescript": "^5.7.3",
    "vite": "^4.4.4"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.0",
    "@mui/lab": "^5.0.0-alpha.134",
    "@mui/material": "^5.14.0",
    "@mui/x-date-pickers": "^6.9.1",
    "@reduxjs/toolkit": "^1.9.5",
    "@tensorflow/tfjs": "3.21.0",
    "@tensorflow/tfjs-converter": "3.21.0",
    "@tensorflow-models/universal-sentence-encoder": "1.3.3",
    "@tensorflow-models/toxicity": "1.2.2",
    "bcryptjs": "^2.4.3",
    "compromise": "^14.9.0",
    "crypto-js": "^4.1.1",
    "debug": "^4.3.4",
    "dexie": "^3.2.4",
    "dexie-react-hooks": "^1.1.6",
    "electron": "^25.2.0",
    "gsap": "^3.12.2",
    "i18next": "^23.7.11",
    "i18next-browser-languagedetector": "^7.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^13.5.0",
    "react-redux": "^8.1.1",
    "react-router-dom": "^6.14.1",
    "recharts": "^2.7.2",
    "rxjs": "^7.8.1",
    "three": "^0.172.0",
    "uuid": "^9.0.0",
    "zod": "^3.21.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
